# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Two ways to define routes
#controllers.Assets.at(path="/public", file="index.html")
GET    /                                    controllers.Application.index(any = "none")


# Admin-SignIns
# http://127.0.0.1:9000/airline/austrian/flights?from=SYD&to=BER&start=2013-11-16T15:00:00%2B01:00&end=2013-11-16T15:00:00%2B01:00
GET    /airline/:airline/flights            controllers.flights.FlightsCtrl.list(airline:String, from:Option[String] ?= None, to:Option[String] ?= None, start:Option[String] ?= None, end:Option[String] ?= None)

GET    /airline/:airline/flights/:id        controllers.flights.FlightsCtrl.find(airline:String, id: Int)

POST   /airline/:airline/flights/:id/book   controllers.flights.FlightsCtrl.book(airline:String, id: Int)

GET    /api/*any                            controllers.Application.http404(any)

# Login/Logout
# GET      /isUser                                controllers.SecurityController.isUser

# GET      /isAdmin                                controllers.SecurityController.isAdmin

# POST     /login                                  controllers.SecurityController.login

# POST     /logout                                 controllers.SecurityController.logout

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file                        controllers.Assets.at(path="/public", file)

GET    /*any                                controllers.Application.index(any)

